<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.dtchain.dao.MangageDao">
	<!-- 添加员工Mapping -->
	<insert id="addEmp" parameterType="io.dtchain.entity.EmpInfo">
		insert into EmpTable
		(empId,empName,empDept,empSex,empPhone,empNum,empMail,empPass) values
		(#{empId},#{empName},#{empDept},#{empSex},#{empPhone},#{empNum},#{empMail},#{empPass})
	</insert>
	<!-- HR账号登录校验Mapping -->
	<select id="login" parameterType="string"
		resultType="io.dtchain.entity.EmpInfo">
		select * from EmpTable where empName=#{adminName} and
		empDept="人力资源部"
	</select>

	<!-- 查询部门所有员工 -->
	<select id="queryDeptEmpInfo" parameterType="Map"
		resultType="io.dtchain.entity.EmpInfo">
		select empId,empName,empDept,empSex,empPhone,empNum,empMail
		from EmpTable
		where empDept=#{info} limit #{begin},6
	</select>
	<!-- 删除员工信息 -->
	<delete id="delEmpInfo" parameterType="Map">
		delete from EmpTable where
		empId=#{empId}
	</delete>
	<!-- 更新员工信息 -->
	<update id="upEmpInfo" parameterType="io.dtchain.entity.EmpInfo">
		update EmpTable
		set
		empName=#{empName},empDept=#{empDept},empPhone=#{empPhone},empNum=#{empNum},empMail=#{empMail},empSex=#{empSex},empPass=#{empPass}
		where empId=#{empId}
	</update>
	<!-- 根据员工名字查询部门 -->
	<select id="queryDept" parameterType="string"
		resultType="string">
		select empDept from EmpTable where empName=#{empName} and
		empId!='admin'
	</select>
	<!-- 查询员工工号与名字 -->
	<select id="queryNum" resultType="java.util.HashMap">
		select empName,empNum from
		EmpTable WHERE empId!='admin'
	</select>
	<!-- 查询员工账号密码 -->
	<select id="queryInfo" parameterType="string"
		resultType="io.dtchain.entity.EmpInfo">
		select empName,empPass,empId from EmpTable where
		empName=#{adminName}
	</select>
</mapper>